#!/bin/bash
# Wrapper script for EnkratFlow RAG System CLI
# This script ensures the CLI runs with the correct virtual environment

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV_PYTHON="$SCRIPT_DIR/venv/bin/python3"
CLI_SCRIPT="$SCRIPT_DIR/src/cli.py"

# Check if venv exists
if [ ! -f "$VENV_PYTHON" ]; then
    echo "‚ùå Error: Virtual environment not found at $VENV_PYTHON"
    echo "Please run: python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
    exit 1
fi

# Execute the CLI with venv Python
exec "$VENV_PYTHON" "$CLI_SCRIPT" "$@"


